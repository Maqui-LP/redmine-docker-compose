#!/usr/bin/env bash

cd "$(dirname "$0")/.." || exit

ENV="$1"

if [[ ! -f ".env.${ENV}" ]]; then
    echo "No .env.${ENV} file"
    exit 1
fi

if ! type -p docker-compose >/dev/null; then
    echo "docker-compose is not installed on this system."
    exit 1
fi
export ENV
docker-compose --env-file ".env.${ENV}" up
